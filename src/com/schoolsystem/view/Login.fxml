<AnchorPane prefHeight="300.0" prefWidth="300.0" style="-fx-background-color: transparent; -fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.schoolsystem.controller.LoginController">
   <children>
      <VBox alignment="CENTER" layoutX="50.0" prefHeight="300.0" prefWidth="200.0" spacing="20.0">
         <children>
            <JFXTextField fx:id="usernametf" focusColor="#00d4ff" labelFloat="true" promptText="Username" />
            <JFXPasswordField fx:id="passwordtf" focusColor="#00d4ff" labelFloat="true" promptText="Password" />
            <JFXComboBox fx:id="cboxLogin" focusColor="#00d4ff" labelFloat="true" onAction="#getLogin" prefHeight="27.0" prefWidth="332.0" promptText="Student / Admin" />
            <JFXButton fx:id="loginbtn" onAction="#getLogin" prefHeight="27.0" prefWidth="302.0" ripplerFill="#14c7f8" style="-fx-background-color: #E5E4E2; -fx-background-radius: 10;" text="Login" />
            <Label fx:id="dbStatus" />
            <Label fx:id="errorlogin" textFill="#ff0101" />
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
